<?xml version="1.0" encoding="UTF-8"?>
<phpunit
    backupGlobals="true"
    bootstrap="./bootstrap.php"
    colors="true"
    convertErrorsToExceptions="true"
    convertNoticesToExceptions="true"
    convertWarningsToExceptions="true"
    processIsolation="false"
    stopOnError="false"
    stopOnFailure="false"
    stopOnIncomplete="false"
    stopOnSkipped="false"
    stopOnRisky="false"
    timeoutForSmallTests="1"
    timeoutForMediumTests="10"
    timeoutForLargeTests="60"
    verbose="true"
>
    <coverage processUncoveredFiles="true">
        <include>
            <directory suffix=".php">../src</directory>
        </include>
        <exclude>
            <directory>../api</directory>
            <directory>../src/Iterators</directory>
            <directory>../src/Lists</directory>
            <directory>../src/Models</directory>
            <directory>../src/Tags</directory>
            <directory>../src/Utilities</directory>
            <directory>../src/Widgets</directory>
            <directory>../src/Widgets/Table</directory>
            <directory>../tests/Integration</directory>
            <file>../src/Attribute.php</file>
            <file>../src/Callback.php</file>
            <file>../src/Node.php</file>
            <file>../src/Replacer.php</file>
            <file>../src/Tag.php</file>
            <file>../src/Renderable.php</file>
            <file>../src/Lists/AbstractRenderableList.php</file>
            <file>../src/Tags/AbstractSourceContainer.php</file>
            <file>../src/Widgets/Modelable.php</file>
            <file>../src/Widgets/Viewable.php</file>
            <file>../src/Widgets/Table/Models/Modelable.php</file>
            <file>../src/Widgets/Wrapper/Markups/Bootstrap.php</file>
        </exclude>
    </coverage>
    <logging>
        <junit outputFile="../../logs/phpunit_ht7-html.xml"/>
        <text outputFile="../../logs/phpunit_ht7-html.txt"/>
    </logging>
    <php>
        <ini name="display_errors" value="1" />
        <ini name="display_startup_errors" value="1" />
        <ini name="error_reporting" value="E_ALL|E_STRICT" />
        <ini name="error_log" value="php_errors.log" />
    </php>
    <testsuites>
        <testsuite name="unit">
            <directory>Unit</directory>
        </testsuite>
        <testsuite name="integration">
            <directory>Integration</directory>
        </testsuite>
    </testsuites>
</phpunit>
